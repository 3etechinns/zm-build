egrep -q '^%zimbra.*nginx' /etc/sudoers
if [ $? = 0 ]; then
  local sudotmp=`mktemp -t zsudoers.XXXXX 2> /dev/null` || { echo "Failed to create tmpfile"; exit 1; }
  SUDOMODE=`perl -e 'my $mode=(stat("/etc/sudoers"))[2];printf("%04o\n",$mode & 07777);'`
  egrep -v '^%zimbra.*nginx' /etc/sudoers > $sudotmp
  mv -f $sudotmp /etc/sudoers
  chmod $SUDOMODE /etc/sudoers
fi
chmod 440 /etc/sudoers.d/zimbra-proxy
chown root:root /etc/sudoers.d/zimbra-proxy
chown -R zimbra:zimbra /opt/zimbra/conf/nginx
